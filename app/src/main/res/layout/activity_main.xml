<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_EmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email ID **"
        android:textColor="#E91E63"
        android:textSize="15sp"
        android:inputType="textEmailAddress"
        android:layout_centerInParent="true"
        />

    <EditText
        android:id="@+id/editText_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password (Min 6 characters)**"
        android:textColor="#E91E63"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:layout_centerInParent="true"
        android:layout_below="@id/editText_EmailId"
        />

    <Button
        android:id="@+id/button_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/editText_Password"
        android:layout_marginTop="10dp"
        android:background="#E91E63"
        android:text="SIGN UP / SIGN IN"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_Or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or use"
        android:layout_below="@id/button_SignUp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/textview_Or"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>